<% @sheet.pages.each do |page| %>
  <section id="<%= page.name %>">
    <%= render '/sheets/banner', page: page %> 
    <div class="row">
      <% if page.reversed %>
        <%= render '/sheets/infobox', page: page %>
        <%= render '/sheets/picturebox', page: page %>
      <% else %>
        <%= render '/sheets/picturebox', page: page %>
        <%= render '/sheets/infobox', page: page %>
      <% end %>
    </div>
  </section>
<% end %>

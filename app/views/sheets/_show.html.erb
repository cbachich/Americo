<div class="span2">
  <%= render 'layouts/sidebar' %>
</div>
<div class="span9 offset1">
  <% @sheet.pages.each do |page| %>
    <section id="<%= page.name %>">
      <%= render '/sheets/banner', page: page %> 
      <div class="row">
        <% if page.reversed %>
          <div class="span6 page-body reversed">
            <p><%= simple_format(page.description) %></p>
          </div>
          <%= render '/sheets/picturebox', page: page %>
        <% else %>
          <%= render '/sheets/picturebox', page: page %>
          <div class="span6 page-body">
            <p><%= simple_format(page.description) %></p>
          </div>
        <% end %>
      </div>
    </section>
  <% end %>
</div>

<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= yield :head %>
</head>
<body>

  <%= render 'layouts/header' %>
  <%= render 'layouts/overview' %>
  <div class="container">
    <div class="row">
      <div class="span3">
        <%= render 'layouts/sidebar' %>
      </div>
      <div class="span9">
        <%= yield %>
      </div>
    </div>
  </div>

</body>
</html>

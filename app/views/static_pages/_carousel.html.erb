<% description = "This contains a whole bunch of text that is used to describe what the user is currently looking at. This description shouldn't be longer than two or three sentences." %>
<div id="myCarousel" class="carousel slide">
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>

  <!-- Carousel items -->
  <div class="carousel-inner">
    <div class="active item">
      <img src="images/home_sample_01.jpg" alt="">
      <div class="carousel-caption">
        <div class="span7">
          <h4>Fabrication</h4>
          <p><%= description %></p>
        </div>
        <div class="span2">
          <%= link_to "Find out more", "work#fabrication", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
    <div class="item">
      <img src="images/home_sample_02.jpg" alt="">
      <div class="carousel-caption">
        <div class="span7">
          <h4>Machining</h4>
          <p><%= description %></p>
        </div>
        <div class="span2">
          <%= link_to "Find out more", "work#machining", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
    <div class="item">
      <img src="images/home_sample_03.jpg" alt="">
      <div class="carousel-caption">
        <div class="span7">
          <h4>Metal</h4>
          <p><%= description %></p>
        </div>
        <div class="span2">
          <%= link_to "Find out more", "work#metal", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>

  <!-- Carousel nav -->
  <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
  <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
</div>

<script type="text/javascript"> 
  $('.carousel').carousel() 
</script>

<%= form_tag :update_company, multipart: true do %>
  
  <div class="span5 offset1">
    <h2>Company Information</h2>
    <%= label_tag :title, "Title" %>
    <%= text_field_tag :title, company.title %>

    <%= label_tag :phone, "Phone Number" %>
    <%= text_field_tag :phone, company.phone %>

    <%= label_tag :fax, "Fax Number" %>
    <%= text_field_tag :fax, company.fax %>

    <%= label_tag :email, "Email" %>
    <%= text_field_tag :email, company.email %>
    
    <%= label_tag :address, "Address" %>
    <%= text_field_tag :address, company.address %>

    <%= label_tag :city, "City" %>
    <%= text_field_tag :city, company.city %>

    <%= label_tag :state, "State" %>
    <%= text_field_tag :state, company.state %>

    <%= label_tag :zipcode, "Zipcode" %>
    <%= text_field_tag :zipcode, company.zipcode %>

    <%= label_tag :logo, "Company Logo" %>
    <%= image_tag company.logo_url, class: "img-polaroid", style: "height: 250px" %>
    <%= file_field_tag :logo %>
  </div>
  <div class="span5">
    <h2>Modify Pages</h2>
    <ul>
      <li><%= link_to "Home Page", edit_home_url %></li>
      <li><%= link_to "Services Page", edit_services_url %></li>
      <li><%= link_to "About Page", edit_about_url %></li>
    </ul>
  </div>

  <div class="span12 text-center space-top">
    <%= submit_tag "Save Changes", class: "btn btn-large btn-primary" %>
  </div>
<% end %>

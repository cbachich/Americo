<% provide(:title, "Contact") %>
<div class="container contact">
  <div class="span6 quote">
    <%= simple_form_for Quote.new, 
                 url: { action: "create", controller: "quotes" },
                 multipart: true,
                 validate: true do |f| %>
      <div class="span5 space-top">
        <legend>Request a Quote</legend>
        <%= render '/shared/quote', f: f %>
      </div>
      <div class="span4 space-bottom">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <div class="span5 directions">
    <div class="span4 space-top">
      <iframe frameborder="0" 
              scrolling="no" 
              src="https://maps.google.com/maps?f=q&amp;source=s_q&amp;hl=en&amp;geocode=&amp;q=85+Mt+View+Ln,+Colorado+Springs,+CO&amp;aq=0&amp;oq=85+&amp;sll=38.875684,-104.758359&amp;sspn=0.297216,0.631714&amp;t=h&amp;ie=UTF8&amp;hq=&amp;hnear=85+Mt+View+Ln,+Colorado+Springs,+Colorado+80907&amp;ll=38.889587,-104.819558&amp;spn=0.009286,0.019741&amp;z=14&amp;iwloc=A&amp;output=embed">
      </iframe>
    </div> 
    <div class="span4 space-top space-bottom">
      <address>
        <strong><%= company.title %></strong><br>
        <%= company.address %><br>
        <%= company.city %>, <%= company.state %> <%= company.zipcode %><br>
        <abbr title="Phone">P:</abbr> <%= company.phone %> <br>
        <abbr title="Fax">F:</abbr> <%= company.fax %> <br>
        <abbr title="Email">E:</abbr> <%= mail_to company.email %>
      </address>
      <a href="https://maps.google.com/maps?f=q&amp;source=embed&amp;hl=en&amp;geocode=&amp;q=85+Mt+View+Ln,+Colorado+Springs,+CO&amp;aq=0&amp;oq=85+&amp;sll=38.875684,-104.758359&amp;sspn=0.297216,0.631714&amp;t=h&amp;ie=UTF8&amp;hq=&amp;hnear=85+Mt+View+Ln,+Colorado+Springs,+Colorado+80907&amp;ll=38.889587,-104.819558&amp;spn=0.009286,0.019741&amp;z=14&amp;iwloc=A">
          Get Directions
      </a>
    </div>
  </div>
</div>
